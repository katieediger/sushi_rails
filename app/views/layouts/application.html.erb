<!DOCTYPE html>
<html>
<head>
  <title>COUNTER App</title>
  <%= csrf_meta_tags %>
    <div id="navbar navbar-default navbar-fixed-top">
      <div class="container">
        <ul class="nav navbar-nav">
          <li><%= link_to 'Home', root_path %> </li>
          <% if current_user %>
          <li><%= link_to 'COUNTER Connections', sushi_index_path %></li>
          <li><%= link_to 'New COUNTER Connection', new_sushi_path, :class => "btn btn-default" %></li>
        </ul>
        <ul class="nav navbar-nav pull-right">
          <li><%= link_to 'Log Out', logout_path, method: :delete %></li>
          <li><%= link_to 'User Profile', user_index_path %></li>
        </ul>
      </div>
    </div>
        <% else %>
          <li><%= link_to 'Google', '/auth/google' %></li>
        </ul>
        <% end %>
        <% flash.each do |key, value| %>
        <div class="alert alert-<%= key %>">
          <%= value %>
        </div>
      </div>
    </div>
        <% end %>
  </div>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>
<body>
  <div class="spinner">
    <div class="bounce1"></div>
    <div class="bounce2"></div>
    <div class="bounce3"></div>
  </div>
  <div id="main-container", class="container">
    <%= yield %>
  </div>
</body>
</html>

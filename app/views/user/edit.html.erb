<h1> Edit User Profiles </h1>
  <table class="table table-curved">
    <thead>
      <tr>
        <th> Name </th>
        <th> Organization </th>
        <th> Action </th>
      </tr>
    </thead>
    <%= form_for (@user) do |f| %>
    <tbody>
      <tr>
        <td>
          <%= f.text_field :name %>
        </td>
        <td>
          <%= f.text_field :organization %>
        </td>
        <td>
          <%= f.submit "Edit", class: 'btn btn-primary' %>
        </td>
      <% end %>
    </tr>
  </tbody>
</table>

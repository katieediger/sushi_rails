<div class="row">
  <h3> Edit COUNTER Connection </h3>
</div>

  <%= form_for (@sushi) do |f| %>
    <div class="form-group">
      <%= f.label :name, "Name" %>
      <%= f.text_field :name, class: "form-control", autofocus: true, required: true %>
    </div>
    <div class='form-group'>
      <%= f.label :endpoint, "Endpoint" %>
      <%= f.text_field :endpoint, class: "form-control", required: true %>
    </div>
    <div class='form-group'>
      <%= f.label :cust_id, "Customer ID" %>
      <%= f.text_field :cust_id, class: "form-control", required: true %>
    </div>
    <div class='form-group'>
      <%= f.label :req_id, "Requestor ID"%>
      <%= f.text_field :req_id, class: "form-control"%>
    </div>
    <div class='form-group'>
      <%= f.label :report_start, "Report Start" %>
      <%= f.text_field :report_start, class: "form-control", required: true %>
    </div>
    <div class='form-group'>
      <%= f.label :report_end, "Report End" %>
      <%= f.text_field :report_end, class: "form-control", required: true %>
    </div>
    <div class='form-group'>
      <%= f.label :password, "Password" %>
      <%= f.text_field :password, class: "form-control"%>
    </div>
    <div class='form-group'>
      <%= f.submit "Update", class: 'btn btn-primary' %>
    </div>
<% end %>
<div class="row">
<ul>
  <li>
    Dates need to be formatted YYYY-MM-DD
  </li>
  <li>
    Dates must end with the last day of the month (e.g. 30 for September, 31 for October)
  </li>
  <li>
    For a list of Endpoints, see
    <%= link_to "Home Page", about_index_path %>
  </li>
  <li>
    The password and customer ID field are optional, but both depend on the provider
  </li>
</ul>
</div>

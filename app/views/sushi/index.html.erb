<h1>Sushi Connections</h1>
<table class="table">
  <div class="row">
    <%= link_to 'Create Sushi Connection', new_sushi_path %>
  </div>
  <% @sushi.each do |s| %>
  <div class="row">
    <%= s.name %>
    <%= s.endpoint %>
    <%= s.cust_id %>
    <%= s.req_id %>
    <%= s.report_start %>
    <%= s.report_end %>
    <%= s.password %>
    <%= link_to 'Get Counter Report', {:controller => :sushi, :action => :call, :id => (s.id), :format => "csv"}, class: 'btn btn-primary'%>
    <%= link_to 'Test Connection', {:controller => :sushi, :action => :test, :id => (s.id)}, class: 'btn btn-primary'%>
    <%= link_to 'Edit Connection', edit_sushi_path(s.id), class: 'btn btn-primary' %>
    <%= link_to 'Delete', sushi_path(s.id), method: :delete, class: 'btn btn-danger', data: {confirm: "Are you sure?"} %>
  </div>
  <% end %>
</table>

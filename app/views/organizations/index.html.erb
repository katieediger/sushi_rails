<!DOCTYPE html>
<html>
<head>
  <title>FetchCounter</title>
  <%= csrf_meta_tags %>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  <%= favicon_link_tag 'favicon.png' %>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>
<div class="container">
<div class="row">
  <h3>Organizations</h3>
</div>
<div class="row">
  <div class="col-lg-1">
    <%= link_to 'New Organization', new_organization_path, class: 'btn btn-primary'%>
  </div>
</div>
<div class="row header">
  <div class="col-lg-5">
    <h6>Name</h6>
  </div>
  <div class="col-lg-5">
    <h6>Action</h6>
  </div>
</div>
<% @organization.each do |o| %>
<div class="row data">
  <div class="col-lg-5">
    <p><%= o.name %></p>
  </div>
  <div class="col-lg-5">
    <p><%= link_to 'Join', {:controller => :organizations, :action => :join, :id => (o.id)}, class: 'btn btn-primary' %></p>
  </div>
</div>
<% end %>
</div>
</body>
</html>

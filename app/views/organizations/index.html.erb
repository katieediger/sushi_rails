<!DOCTYPE html>
<html>
<head>
  <title>FetchCounter</title>
  <%= csrf_meta_tags %>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  <%= favicon_link_tag 'favicon.png' %>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>
  <nav class="navbar sticky-top navbar-expand-md navbar-dark bg-dark">
    <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <div class="navbar-nav">
        <% if current_user %>
        <div class="nav-item nav-link "><%= link_to 'Log Out', logout_path, method: :delete %></div>
        <% else %>
        <div class="nav-item nav-link"><%= link_to 'Login', '/auth/google' %></div>
        <% end %>
      </div>
    </div>
    <div class="spinner">
      <div class="bounce1"></div>
      <div class="bounce2"></div>
      <div class="bounce3"></div>
    </div>
    <div class="navbar-brand"><%= link_to 'FetchCounter', root_path %> </div>
</nav>
  <div class="row">
    <% flash.each do |key, value| %>
    <div class="alert alert-<%= key %>">
      <%= value %>
    </div>
    <% end %>
  </div>
<div class="container">
<div class="row">
  <h3>Organizations</h3>
</div>
<div class="row">
  <div class="col-lg-1">
    <%= link_to 'New Organization', new_organization_path, class: 'btn btn-primary'%>
  </div>
</div>
<div class="row header">
  <div class="col-lg-5">
    <h6>Name</h6>
  </div>
  <div class="col-lg-5">
    <h6>Action</h6>
  </div>
</div>
<% @organization.each do |o| %>
<div class="row data">
  <div class="col-lg-5">
    <p><%= o.name %></p>
  </div>
  <div class="col-lg-5">
    <p><%= link_to 'Join', {:controller => :organizations, :action => :join, :id => (o.id)}, class: 'btn btn-primary' %></p>
  </div>
</div>
<% end %>
</div>
</body>
</html>

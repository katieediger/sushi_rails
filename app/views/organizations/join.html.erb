<div class="row">
  <h3>Join Organizations</h3>
</div>
<div class="row header">
  <div class="col-lg-3">
    <h6>Name</h6>
  </div>
  <div class="col-lg-3">
    <h6>Password</h6>
  </div>
  <div class="col-lg-3">
    <h6>Action</h6>
  </div>
</div>
<div class="row data">
  <div class="col-lg-3">
    <p><%= @organization.name %></p>
  </div>
  <div class="col-lg-3">
    <%= text_field_tag :password %>
  </div>
  <div class="col-lg-3">
    <p><%= link_to 'Confirm', {:controller => :organizations, :action => :confirm, :organization => @organization.attributes, :password => params[:password]}, class: 'btn btn-primary' %></p>
  </div>
</div>
